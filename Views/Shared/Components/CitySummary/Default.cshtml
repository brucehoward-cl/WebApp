@model CityViewModel


    @*<table class="table table-sm table-bordered text-white bg-secondary">*@
    <table class="table table-sm table-bordered text-white bg-@ViewBag.Theme"> @*This uses the Theme provided by the view component*@
        <thead>
            <tr><th colspan="2">Cities Summary</th></tr>
        </thead>
        <tbody>
            <tr>
                <td>Cities:</td>
                <td class="text-right">
                    @Model.Cities
                </td>
            </tr>
            <tr>
                <td>Population:</td>
                <td class="text-right">
                    @Model.Population.ToString("#,###")
                </td>
            </tr>
        </tbody>
    </table>
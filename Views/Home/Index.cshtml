@model Product
@{
    Layout = "_Layout";
    //Layout = Model.Price > 100 ? "_ImportantLayout" : "_Layout";  //Example of a layout determined programmatically
    //Layout = "_ImportantLayout"; /* Overrides the layout specified in _ViewStart */
    ViewBag.Title = ViewBag.Title ?? "Product Table";  /* If not set by the Action method */
}

@section Header {
    Product Information
}


<tr><th>Name</th><td>@Model.Name</td></tr>
<tr>
    <th>Price</th>
    <td>@Model.Price.ToString("c")</td>
</tr>
<tr><th>Category ID</th><td>@Model.CategoryId</td></tr>
@section Footer {
    @(((Model.Price / ViewBag.AveragePrice) * 100).ToString("F2"))% of average price
}


@model Product
@{ 
    Layout = "_SimpleLayout"; 
}

<h5 class="bg-primary text-white text-center p-2">HTML Form</h5>


<form asp-action="submitform" method="post" id="htmlform">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <!-- A nested property -->
        <label>Category Name</label>
        <!--<input class="form-control" name="Category.Name" value="@Model.Category.Name" />--> <!-- nested property without using tag helper -->
        <input class="form-control" asp-for="Category.Name" /> <!-- nested property with using tag helper -->
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>